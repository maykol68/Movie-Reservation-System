<div class="w-full">
  <% content_for :title, "Genres" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Genres</h1>
    <%= link_to "New genre", new_genre_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="genres" class="min-w-full">
    <% @genres.each do |genre| %>
      <%= render genre %>
    <% end %>
  </div>
</div>
