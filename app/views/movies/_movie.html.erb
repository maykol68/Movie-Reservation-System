<div id="<%= dom_id movie %>">
  <%= image_tag movie.poster, width: 200 if movie.poster.attached? %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= movie.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= movie.description %>
  </p>

</div>
