<div class="w-full">
  <% content_for :title, "Movies" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-white">Movies</h1>
  </div>

  <div id="movies" class="min-w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <% @movies.each do |movie| %>
      <%= render movie %>
    <% end %>
  </div>  
</div>
